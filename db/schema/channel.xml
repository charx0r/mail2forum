<?xml version="1.0"?>
<schema version="0.3">

	<table name="channel">
		<desc>Installed Channels table</desc>
		
		<field name="id" type="I"><KEY/></field>
		<field name="path" type="C" size="100"></field>
		<field name="class" type="C" size="100"></field>
		<field name="properties" type="I"></field>
		<field name="channel_fields" type="X"></field>
		
		<index name="name">
			<descr>Unique index for channel name</descr>
			<col>name</col>
			<UNIQUE/>
		</index>
	
	</table>


</schema>